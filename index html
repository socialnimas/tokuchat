  // ğŸ”´ ã“ã“ã«è‡ªåˆ†ã®Firebaseè¨­å®šã‚’è²¼ã‚Šä»˜ã‘ã¦ï¼
  const const firebaseConfig = {
  apiKey: "AIzaSyDCEH6RjK6CqunbDOQqtXzf9q7Lcxd0XdE",
  authDomain: "tokumeichat-49989.firebaseapp.com",
